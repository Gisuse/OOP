<Page x:Class="Application.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Application"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Height="600" Width="800">
    <Grid Background="Transparent">
        <Border MinWidth="400" Margin="15,0,15,0" VerticalAlignment="Center" Padding="30" MaxWidth="550" CornerRadius="15" Background="#A0C1D1" Height="450">
            <Border.Effect>
                <DropShadowEffect BlurRadius="25" Color="#575366" ShadowDepth="3"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="ChemBase" FontSize="30" FontWeight="Bold" Margin="0 0 0 20" Foreground="White"/>
                <Grid Margin="0 0 0 10">
                    <Button x:Name="RegisBut" HorizontalAlignment="Left" Content="Реєстрація"/>
                    <Button x:Name="LoginBut" HorizontalAlignment="Right" Content="Авторизація" Style="{StaticResource MaterialDesignFlatButton}" Click="Login_Click"/>
                </Grid>
                <TextBox x:Name="input_login" materialDesign:HintAssist.Hint="Введіть логін" Style="{StaticResource MaterialDesignFloatingHintTextBox}" BorderBrush="Gray"/>
                <TextBox x:Name="input_surname" materialDesign:HintAssist.Hint="Введіть прізвище" Style="{StaticResource MaterialDesignFloatingHintTextBox}" BorderBrush="Gray"/>
                <TextBox x:Name="input_name" materialDesign:HintAssist.Hint="Введіть ім’я" Style="{StaticResource MaterialDesignFloatingHintTextBox}" BorderBrush="Gray"/>
                <TextBox x:Name="input_email" materialDesign:HintAssist.Hint="Введіть email" Style="{StaticResource MaterialDesignFloatingHintTextBox}" BorderBrush="Gray"/>
                <PasswordBox x:Name="input_password" materialDesign:HintAssist.Hint="Введіть пароль" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" BorderBrush="Gray"/>
                <PasswordBox x:Name="input_passConf" materialDesign:HintAssist.Hint="Підтвердіть пароль" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" BorderBrush="Gray"/>
                <Grid>
                    <CheckBox
                        Content="Запам'ятати мене"
                        Margin="0,47,0,-47"
                        Style="{StaticResource MaterialDesignCheckBox}" 
                        x:Name="isRemember" />
                    <Button x:Name="Register_ENTER" Click="Registration_Click" Content="Зареєструватися" Margin="0,15,0,5" Cursor="Hand"/>
                </Grid>

            </StackPanel>
        </Border>
        <StackPanel Grid.Column="1" Width="45" Height="45" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0 120 145 0">
            <materialDesign:PackIcon Name="CloseIcon" Kind="Close" Height="35" Width="35" Padding="0" Margin="0 0 0 0" HorizontalAlignment="Right" MouseDown="CloseIcon_MouseDown" MouseEnter="CloseIcon_MouseEnter" MouseLeave="CloseIcon_MouseLeave"/>
        </StackPanel>
    </Grid>
</Page>
