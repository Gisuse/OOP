<Page x:Class="Application.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Application"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Height="600" Width="800">
    <Grid Background="#DADFF7">
        <Border MinWidth="400" Margin="15" VerticalAlignment="center" Padding="30" MaxWidth="550" CornerRadius="15" Background="#A0C1D1">
            <Border.Effect>
                <DropShadowEffect BlurRadius="25" Color="#575366" ShadowDepth="3"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Назва програми" FontSize="30" FontWeight="Bold" Margin="0 0 0 20"/>
                <TextBlock x:Name="block" FontSize="16" FontWeight="Bold" Margin="0 0 0 20"/>
                <Grid Margin="0 0 0 20">
                    <Button x:Name="RegisBut" HorizontalAlignment="Left" Content="Реєстрація"/>
                    <Button x:Name="LoginBut" HorizontalAlignment="Right" Content="Авторизація" Style="{StaticResource MaterialDesignFlatButton}" Click="Login_Click"/>
                </Grid>
                <TextBox x:Name="input_login" materialDesign:HintAssist.Hint="Введіть логін" Style="{StaticResource MaterialDesignFloatingHintTextBox}" BorderBrush="Gray"/>
                <TextBox x:Name="input_email" materialDesign:HintAssist.Hint="Введіть email" Style="{StaticResource MaterialDesignFloatingHintTextBox}" BorderBrush="Gray"/>
                <PasswordBox x:Name="input_password" materialDesign:HintAssist.Hint="Введіть пароль" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" BorderBrush="Gray"/>
                <PasswordBox x:Name="input_passConf" materialDesign:HintAssist.Hint="Підтвердіть пароль" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" BorderBrush="Gray"/>
                <Button x:Name="Register_ENTER" Click="Registration_Click" Content="Зареєструватися" Margin="0 20 0 0" Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
