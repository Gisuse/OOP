                <TextBlock Text="EXAMPLE#1"/>
                <TextBlock Text="EXAMPLE#1"/>
                <TextBlock Text="EXAMPLE#1"/>
                <TextBlock Text="EXAMPLE#1"/>
                <TextBlock Text="EXAMPLE#1"/>
                <TextBlock Text="EXAMPLE#1"/>
                <TextBlock Text="EXAMPLE#1"/>
                <TextBlock Text="EXAMPLE#1"/>
                <TextBlock Text="EXAMPLE#1"/>
                <TextBlock Text="EXAMPLE#1"/>
                <TextBlock Text="EXAMPLE#1"/>
                <TextBlock Text="EXAMPLE#1"/>
                <TextBlock Text="EXAMPLE#1"/>
                <TextBlock Text="EXAMPLE#1"/>
                <TextBlock Text="EXAMPLE#1"/>
            </ListView>
        </ScrollViewer>
        <Button Style="{StaticResource AvatarButton}" Width="100" HorizontalAlignment="Left"/>
    </Grid>
</UserControl>
