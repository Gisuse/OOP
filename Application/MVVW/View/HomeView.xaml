<UserControl x:Class="Application.MVVW.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Application.MVVW.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="550">

    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left">
        <Button Style="{StaticResource WindowButtonTheme}"
                Width="520" Height="180" Padding="0" Click="Button_Click_1" Cursor="Hand" Command="{Binding DataContext.ClassViewModel, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
        <Button Style="{StaticResource WindowButtonAltTheme}"
            Width="520" Height="180" Padding="0" Cursor="Hand" Command="{Binding DataContext.ClassViewModel, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" Click="Button_Click_3"/>
        <TextBox x:Name="txb1" TextWrapping="Wrap" Text="TextBox" Width="120" TextChanged="TextBox_TextChanged"/>
        <TextBox x:Name="txb2" TextWrapping="Wrap" Text="TextBox" Width="120"/>
        <Button Content="Button" Click="Button_Click_2"/>
    </StackPanel>
</UserControl>
